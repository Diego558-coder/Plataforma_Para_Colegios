{
  "name": "plataforma-escolar",
  "version": "1.0.0",
  "description": "Una plataforma educativa completa para la gestión integral de instituciones educativas",
  "main": "index.html",
  "scripts": {
    "dev": "cd api && npm run dev",
    "build": "cd api && npm run build",
    "start": "cd api && npm start",
    "install-all": "npm install && cd api && npm install",
    "seed": "cd api && npm run prisma:seed",
    "migrate": "cd api && npm run prisma:migrate",
    "lint": "cd api && npm run lint",
    "format": "cd api && npm run format",
    "test": "cd api && npm test",
    "docker-up": "docker-compose up -d",
    "docker-down": "docker-compose down",
    "docker-logs": "docker-compose logs -f"
  },
  "keywords": [
    "educación",
    "plataforma",
    "escuela",
    "estudiantes",
    "docentes",
    "gestión",
    "tareas",
    "calificaciones",
    "lms"
  ],
  "author": "Diego",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Diego558-coder/plataforma-escolar.git"
  },
  "bugs": {
    "url": "https://github.com/Diego558-coder/plataforma-escolar/issues"
  },
  "homepage": "https://github.com/Diego558-coder/plataforma-escolar#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
