# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/plataforma_escolar

# ==========================================
# CONFIGURACIÓN DE JWT
# ==========================================
JWT_SECRET=tu-secreto-jwt-muy-seguro-cambiar-en-produccion
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=tu-secreto-refresh-cambiar-en-produccion
JWT_REFRESH_EXPIRES_IN=30d

# ==========================================
# CONFIGURACIÓN DEL SERVIDOR
# ==========================================
PORT=5000
NODE_ENV=development
APP_NAME=Plataforma Escolar
APP_VERSION=1.0.0

# ==========================================
# CONFIGURACIÓN DE STRIPE (Pagos)
# ==========================================
STRIPE_SECRET_KEY=sk_test_tu_clave_secreta_aqui
STRIPE_PUBLIC_KEY=pk_test_tu_clave_publica_aqui
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret_aqui

# ==========================================
# CONFIGURACIÓN DE EMAIL
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-aplicacion
SMTP_FROM_NAME=Plataforma Escolar
SMTP_FROM_EMAIL=noreply@plataformaescolar.com

# ==========================================
# CONFIGURACIÓN DE SEGURIDAD
# ==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CONFIGURACIÓN DE ARCHIVOS
# ==========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,zip

# ==========================================
# CONFIGURACIÓN DE LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# CONFIGURACIÓN DE GOOGLE MEET (opcional)
# ==========================================
GOOGLE_MEET_API_KEY=tu-api-key-google-meet
GOOGLE_MEET_CLIENT_ID=tu-client-id

# ==========================================
# CONFIGURACIÓN DE REDIS (Cache)
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ==========================================
# CONFIGURACIÓN DE ZONAS HORARIAS
# ==========================================
TIMEZONE=America/Bogota
LOCALE=es-CO

# ==========================================
# CONFIGURACIÓN DE VARIABLES ADICIONALES
# ==========================================
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
ENVIRONMENT=development
DEBUG=false
